<p id="notice"><%= notice %></p>

<h2>Shopping Lists</h2>
<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th>Title</th>
    <th>Was bought</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @shopping_lists.each do |shopping_list| %>
    <tr>
      <td><%= shopping_list.title %></td>
      <td><%= shopping_list.was_bought %></td>
      <td><%= link_to icon('fas', 'eye'), shopping_list %></td>
      <td><%= link_to icon('fas', 'edit'), edit_shopping_list_path(shopping_list) %></td>
      <td><%= link_to icon('fas', 'trash-alt'), shopping_list, method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'New Shopping List', new_shopping_list_path %>